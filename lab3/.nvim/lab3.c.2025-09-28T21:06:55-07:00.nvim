#define _POSIX_C_SOURCE 200809L
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {

  char *line = NULL;
  size_t len = 0;

  while(1) {
    printf("Enter input: ");
    ssize_t size = getline(&line, &len, stdin);
    if (size == -1) {
      perror("error reading file");
    }

    printf("%s", line);
    
  }
  free(line);
}
